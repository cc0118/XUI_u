<com.xuexiang.xuidemo.widget.motion.CollapsibleToolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/motionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color_theme_7"
    android:minHeight="50dp"
    app:layoutDescription="@xml/motion_layout_coordinator_header_1"
    app:layout_scrollFlags="scroll|enterAlways|snap|exitUntilCollapsed">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="?attr/colorAccent"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/monterey" />

    <TextView
        android:id="@+id/label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/monterey"
        android:textColor="#FFF"
        android:textSize="32sp"
        android:transformPivotX="0dp"
        android:transformPivotY="0dp" />

    <TextView
        android:id="@+id/sub_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/california"
        android:textColor="#FFF"
        android:textSize="24sp"
        app:fontFamily="cursive" />

</com.xuexiang.xuidemo.widget.motion.CollapsibleToolbar>
